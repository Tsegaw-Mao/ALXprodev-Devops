#!/bin/bash

# List of Pokémon
POKEMONS=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# Create output directory if it doesn't exist
OUTPUT_DIR="pokemon_data"
mkdir -p "$OUTPUT_DIR"

# Loop through Pokémon list
for pokemon in "${POKEMONS[@]}"; do
    echo "Fetching data for $pokemon..."

    success=false

    for attempt in {1..3}; do
        if curl -s -f "https://pokeapi.co/api/v2/pokemon/$pokemon" -o "$OUTPUT_DIR/${pokemon}.json"; then
            echo "Saved data to $OUTPUT_DIR/${pokemon}.json ✅"
            success=true
            break
        else
            echo "Attempt $attempt failed for $pokemon."
            sleep 2
        fi
    done

    if [ "$success" = false ]; then
        echo "Failed to fetch data for $pokemon after 3 attempts ❌" >> errors.txt
    fi

    # Delay between Pokémon to avoid hitting rate limits
    sleep 2
done

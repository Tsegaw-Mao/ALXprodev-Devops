#!/bin/bash

INPUT_DIR="pokemon_data"
OUTPUT_FILE="pokemon_report.csv"

# Create CSV header
echo "Name,Height (m),Weight (kg)" > "$OUTPUT_FILE"

# Loop through each JSON file and extract info
for file in "$INPUT_DIR"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/') # Capitalize first letter
    height=$(jq -r '.height' "$file" | awk '{printf "%.1f", $1/10}') # decimeters -> meters
    weight=$(jq -r '.weight' "$file" | awk '{printf "%.1f", $1/10}') # hectograms -> kg
    echo "$name,$height,$weight" >> "$OUTPUT_FILE"
done

echo "CSV Report generated at: $OUTPUT_FILE"
echo

# Display the report
cat "$OUTPUT_FILE"
echo

# Calculate averages (skip header)
awk -F, 'NR>1 {sum_h+=$2; sum_w+=$3; count++} 
END {printf "\nAverage Height: %.2f m\nAverage Weight: %.2f kg\n", sum_h/count, sum_w/count}' "$OUTPUT_FILE"
